<h2>Sign In!</h2>

<div class="user-form interactable-zone">
	<%= link_to "Log In with Google", '/auth/google_oauth2' %>

	<%= form_with url: sign_in_path, local: true do |f| %>
		<p>
			<%= f.label 'email' %>
			<%= f.text_field :email, id: 'email' %>
		</p>

		<p>
			<%= f.label 'password' %>
			<%= f.password_field :password, id: 'password' %>
		</p>
		<%= f.submit 'Log In' %>
	<% end %>
	<div>
		No account? <%= link_to "Sign up now!", sign_up_path %>
	</div>
</div>