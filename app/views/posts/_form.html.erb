<div class="post-form interactable-zone">
	<%= form_with model: @new_post do |form| %>
		<div>
			<%= form.label :words %><br/>
			<%= form.text_area :words, size: "50x3", maxlength: "142" %>
		</div>

		<div>
			<strong>Replies</strong>
		</div>

		<div>
			<strong>Plies</strong>
		</div>

		<%= form.hidden_field(:plies, value: []) %>
		<%= form.hidden_field(:replies, value: []) %>

		<div>
			<%= form.submit %>
		</div>
	<% end %>
</div>