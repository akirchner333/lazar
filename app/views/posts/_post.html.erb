<li class="post-box">
	<% if local_assigns.dig(:left_line) %>
		<div class="vertical-line"></div>
	<% end %>
	<div class="post">
		<div class="post-header">
			<div class="user">
				<%= link_to post.user.username, user_path(post.user.id) %>
				
			</div>
			<div>
				<%= post.created_at.strftime('%m/%d %H:%M') %>
			</div>
			<div class="link"><%= link_to "(_)", post %></div>
		</div>
		<div class="words"><%= post.words %></div>
		<% if Current.user %>
			<div class="post-interactions">
				<%= svg('ply') %>
				<%= render partial: 'likes/like_button', locals: {
					post_id: post.id,
					reaction: 'crab',
					count: post.crab_count,
					liked: post.crab_liked
				} %>
				<%= render partial: 'likes/like_button', locals: {
					post_id: post.id,
					reaction: 'microphone',
					count: post.microphone_count,
					liked: post.microphone_liked
				} %>
				<%= render partial: 'likes/like_button', locals: {
					post_id: post.id,
					reaction: 'obelisk',
					count: post.obelisk_count,
					liked: post.obelisk_liked
				} %>
				<%= svg('reply') %>
			</div>
		<% end %>
	</div>
	<% if local_assigns.dig(:right_line) %>
		<div class="vertical-line"></div>
	<% end %>
</li>