<h1>Sign Up</h1>

<div class="user-form interactable-zone">
	<%= form_with model: @user, local: true, url: sign_up_path do |f| %>
		<div>
			<%= f.label 'email' %>
			<%= f.text_field :email %>
		</div>
		<div>
			<%= f.label 'password' %>
			<%= f.password_field :password %>
		</div>
		<div>
			<%= f.label 'password_confirmation' %>
			<%= f.password_field :password_confirmation %>
		</div>
		<div>
			<%= f.submit 'Sign Up' %>
		</div>
	<% end %>
</div>
